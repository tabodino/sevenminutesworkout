<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Couleur du texte quand le bouton est désactivé -->
    <item android:color="@android:color/transparent" android:state_enabled="false"/>
    <!-- Couleur du texte quand le bouton est pressé -->
    <item android:color="@color/color_pressed" android:state_pressed="true"/>
    <!-- Couleur du texte par défaut quand le bouton est activé -->
    <item android:color="@color/default_text_color" android:state_enabled="true"/>
</selector>